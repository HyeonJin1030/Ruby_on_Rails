<form action='/home/create' method='post'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    제목: <input type="text" name="post_title"><br>
    내용: <textarea name="post_content"></textarea><br>
    <input type="submit" value="제출">
</form>
<br><br>
<!-- 위 부분은 form_for 에서 실행 되지 않을 것이다. home_controller 참고 -->
------------------form_for----------------------
<br><br>

<!--post table의 속성으로만 이름을 지을 수 있음-->
<!--여기서 @post=Post.new -->
<%=form_for(@post ,url: posts_path, method: "post") do |f| %>
    <%=f.label :title, '제목:'%>
    <%=f.text_field :title%><br>
    <%=f.label :content, '내용:'%>
    <%=f.text_area :content%><br>
    <%=f.submit '제출'%>
<%end%>